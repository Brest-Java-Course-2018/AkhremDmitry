<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <!--<context:component-scan base-package="com.epam.brest.course.rest"/>-->

    <bean id="callService" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.epam.brest.course.service.CallService"/>
    </bean>

    <bean id="callRestController" class="com.epam.brest.course.rest.CallRestController">
        <property name="callService" ref="callService"/>
    </bean>

    <bean id="carService" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.epam.brest.course.service.CarService"/>
    </bean>

    <bean id="carRestController" class="com.epam.brest.course.rest.CarRestController">
        <property name="carService" ref="carService"/>
    </bean>

    <bean id="crewService" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.epam.brest.course.service.CrewService"/>
    </bean>

    <bean id="crewRestController" class="com.epam.brest.course.rest.CrewRestController">
        <property name="crewService" ref="crewService"/>
    </bean>
</beans>